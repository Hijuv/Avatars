#!/bin/sh

# Das anklickbare Hilfemen√º. Mittelklick, um den Fenstermanager neu zu starten.

# √úberpr√ºfe, ob dwm l√§uft, verwende dwm's Readme und starte neu.
if pidof dwm >/dev/null; then
	READMEFILE="/home/artix/Files Sync/üíª System/commands.md"
	restartwm() { pkill -HUP dwm ;}
else
	restartwm() { i3 restart ;}
fi

case $BLOCK_BUTTON in
	1) typora "${READMEFILE:-${XDG_DATA_HOME:-$HOME/.local/share}/larbs/readme.md}" ;;
	2) restartwm ;;
	3) notify-send "‚ùì Hilfemodul" "\- Linksklick, um den LARBS-Leitfaden zu √∂ffnen.
- Mittelklick, um den Fenstermanager zu aktualisieren." ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo "‚ùì"
